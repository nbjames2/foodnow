<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <main class="container">
            <% include ../static/partials/messages.ejs %>
            <h1>Create a new item</h1>
            <form action="/lists/<%= listId %>/newitem" method="post">
                <div class="form-group">
                    <label for="item">Name</label>
                    <input type="text" class="form-control" name="item" aria-describedby="itemHelp" placeholder="Enter item">
                </div>
            
                <div class="form-group">
                    <label for="max">Max cost</label>
                    <input type="number" class="form-control" name="max" aria-describedby="maxHelp" placeholder="Enter maximum cost">
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                    
            </form>
        </main>
        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>