<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <main class="container">
            <% include ../static/partials/messages.ejs %>
            <h1>Edit <% item.item %></h1>
            <form action="/lists/<%= listId %>/edit/<%= item.id %>" method="post">
                <div class="form-group">
                    <label for="item">Name</label>
                    <input type="text" class="form-control" name="item" aria-describedby="itemHelp" value="<%= item.item %>">
                </div>

                <div class="form-group">
                    <label for="max">Max</label>
                    <input type="number" class="form-control" name="max" aria-describedby="maxHelp" value="<%= item.max %>">
                </div>

                <div class="form-group form-inline">
                    <label for="purchased" style="margin-right: 2rem;">Purchased </label>
                    <input type="checkbox" class="form-control" name="purchased" aria-describedby="purchasedHelp" <% if (item.purchased) { %> checked <% } %>>
                </div>
            
                <button type="submit" class="btn btn-primary">Submit</button>          
            </form>
        </main>
        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>